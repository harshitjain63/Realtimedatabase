<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    tools:context=".Retrieve">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Details"
        android:textSize="30dp"
        android:id="@+id/Text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Image"
        android:layout_width="171dp"
        android:layout_height="157dp"
        app:layout_constraintTop_toBottomOf="@+id/Text"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_1"
        app:civ_border_color="@color/black"
        app:civ_border_width="4dp" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Unique key"
    android:layout_margin="30dp"
    android:drawableEnd="@drawable/baseline_key_24"
    android:background="@drawable/border"
    app:layout_constraintTop_toBottomOf="@+id/Image"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/Uniquekey"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Uniquekey"
        android:hint="Name of user"
        android:id="@+id/Name"
        android:drawableRight="@drawable/baseline_perm_identity_24"
        android:background="@drawable/border"
        android:layout_margin="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        android:hint="Number of user"
        android:id="@+id/Number"
        android:background="@drawable/border"
        android:drawableRight="@drawable/baseline_local_phone_24"
        android:layout_margin="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Number"
        android:hint="Address of user"
        android:id="@+id/Address"
        android:layout_margin="43dp"
        android:background="@drawable/border"
        android:drawableRight="@drawable/baseline_home_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Address"
        android:layout_margin="60dp"
        android:id="@+id/Data"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>